{
  "name": "opman",
  "version": "1.0.0",
  "description": "OpenWrt Management Tool",
  "main": "dist/main/app.js",
  "scripts": {
    "dev": "concurrently \"tsc -w -p tsconfig.json\" \"wait-on dist/main/app.js && electron .\"",
    "build": "tsc -p tsconfig.json",
    "start": "electron .",
    "dist": "electron-builder --win --x64"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "electron": "^28.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "ssh2": "^1.11.0",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.20",
    "@types/react": "^18.2.62",
    "@types/react-dom": "^18.2.25",
    "concurrently": "^8.6.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.5.3"
  },
  "build": {
    "appId": "com.opman.app",
    "productName": "OpMan",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    }
  }
}
    